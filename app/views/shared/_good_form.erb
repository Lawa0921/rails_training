<%= form_for @good do |f| %>
  <% if @good.errors.any? %>
    <ul>
      <% @good.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price%>
    <%= f.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :discount %>
    <%= f.number_field :discount, class: "form-control", step: :any %>
  </div>

  <div class="form-group">
    <%= f.label :status %> 
    <%= f.select :status, Good.statuses.keys %>
  </div>

  <div class="form-group">
    <%= f.label :public %>
    <%= f.check_box :public %>
  </div>

  <div class="form-group">
    <% if @good.photos.attached? %>
      <% @good.photos.each do |photo|%>
        <%= image_tag photo.variant(resize_to_limit: [200, 200])%>
      <% end %>
    <% end %>
      <%= f.file_field :photos, multiple: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="form-group">
    <%= f.label :size %>
    <%= f.select :size, Good.sizes.keys %>
  </div>

  <div class="form-group">
    <%= f.label :color %>
    <%= f.select :color, Good.colors.keys %>
  </div>

  <div>
    <%= f.submit "送出"%>
  </div>
<% end %>
